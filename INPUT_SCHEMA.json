{
  "title": "Instagram Influencer Analyzer",
  "schemaVersion": 1,
  "type": "object",
  "properties": {
    "targets": {
      "title": "Usernames ou links do Instagram",
      "type": "array",
      "description": "Cole aqui @username, link de perfil ou link de post (p/reel/tv) do Instagram. Pode misturar todos no mesmo campo.",
      "editor": "stringList",
      "prefill": [
        "@neymarjr",
        "https://www.instagram.com/reel/DNWX8xvPGMe/",
        "https://www.instagram.com/p/C2vXMxXrlkI/"
      ]
    },
    "postsLimit": {
      "title": "Número de posts a analisar",
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 24
    },
    "concurrency": {
      "title": "Concorrência",
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 1
    },
    "useLoginCookies": {
      "title": "Usar cookies de login?",
      "type": "boolean",
      "default": false
    },
    "cookies": {
      "title": "Cookies (JSON opcional)",
      "type": "string",
      "editor": "textarea",
      "description": "Cole aqui os cookies exportados do Instagram em formato JSON, caso precise acessar posts privados ou restritos."
    }
  },
  "required": ["targets"]
}
